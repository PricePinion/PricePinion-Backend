{
    "name": "pricepinion-backend",
    "version": "1.2.0",
    "description": "This is the webscraper we will be using for PricePinion.",
    "main": "AppServer.js",
    "scripts": {
        "test": "mocha --timeout 1000000 -r ts-node/register 'tests/**/*.ts'",
        "test:routes": "mocha --timeout 1000000 -r ts-node/register 'tests/routes/*.ts'",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "dev": "npm run build && node dist/src/AppServer.js",
        "dev:watch": "nodemon --watch 'src/**/*.ts' --exec npm run dev",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PricePinion/PricePinion-Backend.git"
    },
    "author": "PricePinion Ltd.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PricePinion/PricePinion-Backend/issues"
    },
    "homepage": "https://github.com/PricePinion/PricePinion-Backend#readme",
    "devDependencies": {
        "@types/chai": "^4.3.14",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.3",
        "@types/sinon": "^17.0.3",
        "chai": "^4.4.1",
        "mocha": "^10.4.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "sinon": "^17.0.1",
        "ts-node": "^9.1.1",
        "tsc-alias": "^1.8.8",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@types/express": "^4.17.21",
        "chai-http": "^4.4.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "mongoose": "^8.3.2",
        "puppeteer": "^22.6.1",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "winston": "^3.13.0"
    }
}
